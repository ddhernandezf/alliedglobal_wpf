<Window x:Class="CaseNumberLookupWPFApp.NumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaseNumberLookupWPFApp"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=txtInput}"
        Title="MainWindow" Height="353" Width="741" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Case # " />
                <TextBox Text="{Binding input}" Margin="10,0,0,0"  Width="100" x:Name="txtInput" />
                <Button x:Name="addButton" Margin="10,0,0,0"  Content="Add To List" Command="{Binding addCommand}" />
                <Button x:Name="ascButton" Margin="10,0,0,0"  Content="ASC" Command="{Binding sortAscCommand}" />
                <Button x:Name="descButton" Margin="10,0,0,0"  Content="DESC" Command="{Binding sortDescCommand}" />
            </StackPanel>

            <ListBox ItemsSource="{Binding numbers}" Width="300" Height="150"   HorizontalAlignment="Left" Margin="50,20,0,0"/>

            <Label Content="Enough Cases Have Been Entered" />


        </StackPanel>
    </Grid>
</Window>
